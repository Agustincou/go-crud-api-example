  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}"
    },
    {
      "name": "Debug Custom Linter",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/pkg/custom_linter/pkgcheck.go",
      "args": ["--", "./..."],
      "env": {},
      "cwd": "${workspaceFolder}"
    }
  ]
}
